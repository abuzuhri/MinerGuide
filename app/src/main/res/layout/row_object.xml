<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp"
    android:orientation="horizontal"
    card_view:cardElevation="2sp"
    card_view:cardUseCompatPadding="true"

    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    style="@style/CardView.Light"
    >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="5.0dip"
    android:paddingBottom="5.0dip"
    android:paddingRight="12.0dip"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:minHeight="?android:listPreferredItemHeight"
    
  >
    <!--<CheckBox android:id="@+id/favbutton" android:focusable="false" android:clickable="false"
        android:button="@drawable/preference_checkbox" android:layout_alignParentRight="true" 
        android:layout_centerVertical="true" android:layout_width="45dp" android:layout_height="45dp" />-->
    <ImageView android:id="@+id/photo" 
        android:layout_width="50.0dip" 
        android:layout_height="50.0dip" 
        android:layout_marginLeft="12.0dip" 
        android:layout_marginRight="12.0dip" 
        android:src="@drawable/ic_empty" 
        android:layout_alignParentLeft="true" 
        android:layout_centerVertical="true" />
    
    <ImageView android:id="@+id/watched" 
        android:contentDescription="@string/app_name"
        android:paddingRight="5.0dip" 
        android:layout_width="30.0dip" 
        android:layout_height="30.0dip" 
        android:src="@drawable/check_on" 
        android:layout_alignRight="@+id/photo" 
        android:layout_alignBottom="@+id/photo" />   

        
         
    <LinearLayout android:orientation="vertical" android:id="@+id/name_num_layout" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginRight="8.0dip"
        android:layout_toRightOf="@+id/photo"
        android:layout_centerVertical="true">
        <TextView android:textSize="18.0sp" android:textColor="@color/md_black_1000"
            android:ellipsize="end" 
            android:textStyle="bold"
            
            android:id="@+id/itemDescription" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="Vijay Raghunathan asdfasdfasd asdfasdfasdf ads adsasd" 
            android:maxLines="1" />

        <TextView android:textSize="12.0sp"
            android:id="@+id/categoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoty"
            android:maxLines="2"
            android:textColor="@color/md_grey_500"
            android:paddingLeft="2.0dip"  />

        <TextView android:textSize="12.0sp"
		     android:id="@+id/duration" 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_marginTop="2.0dip"
            android:layout_marginBottom="2.0dip"
		    android:text="Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info Info "
		    android:maxLines="2"
            android:textColor="@color/md_grey_700"
		    android:paddingLeft="2.0dip"  />


    </LinearLayout>
</RelativeLayout>

</android.support.v7.widget.CardView>