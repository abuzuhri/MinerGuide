<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/MainLayout"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout  android:padding="20dp" android:id="@+id/header" android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/objectIcon" android:layout_width="60.0dip" android:layout_height="60.0dip" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip" android:src="@drawable/unknown" />
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip">
            <TextView android:textAppearance="?android:textAppearanceLarge" android:id="@+id/objectName" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Object Name" android:textColor="@android:color/white" />
            <TextView android:textAppearance="?android:textAppearanceSmall" android:id="@+id/objectID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="5.0dip" android:text="Decimal ID" android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>



    <FrameLayout
        android:id="@+id/body"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/wrapper" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/objectImage" android:layout_width="fill_parent" android:adjustViewBounds="true" android:scaleType="fitXY" android:layout_height="wrap_content" android:src="@drawable/biomepic_1" />
                    <View
                        android:id="@+id/objectImageDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/md_black_1000" />
                    <LinearLayout android:orientation="vertical" android:background="#ffc6c6c6" android:id="@+id/crafting" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <!-- <TextView android:textAppearance="?android:textAppearanceSmall" android:paddingLeft="20dp" android:paddingTop="10dp" android:layout_width="wrap_content" android:textColor="@color/md_black_1000" android:layout_height="wrap_content" android:text="How to get it" />-->
                    </LinearLayout>
                    <View
                        android:id="@+id/craftingDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/md_black_1000" />

                    <LinearLayout android:orientation="vertical"  android:background="#ffc6c6c6" android:id="@+id/smelting" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <!--<TextView android:textAppearance="?android:textAppearanceSmall"  android:paddingLeft="20dp" android:paddingTop="10dp"  android:layout_width="wrap_content" android:textColor="@color/md_black_1000" android:layout_height="wrap_content" android:text="How to get it" />-->
                    </LinearLayout>
                    <View
                        android:id="@+id/smeltingDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/md_black_1000" />

                    <LinearLayout android:orientation="vertical"   android:background="#ffc6c6c6" android:id="@+id/brewing" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    </LinearLayout>
                    <View
                        android:id="@+id/brewingDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="2px"
                        android:background="@color/md_black_1000" />

                    <LinearLayout android:orientation="vertical" android:id="@+id/information" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip">

                        <com.bluejamesbond.text.DocumentView
                            android:id="@+id/informationText"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            app:documentView_antialias="true"
                            app:documentView_cacheConfig="auto_quality"
                            app:documentView_hyphen="-"
                            app:documentView_lineHeightMultiplier="2.0"
                            app:documentView_reverse="false"
                            app:documentView_textAlignment="justified"
                            app:documentView_textFormat="plain"
                            app:documentView_textSize="12sp"
                            app:documentView_textStyle="bold"
                            app:documentView_textSubPixel="true"
                            app:documentView_insetPadding="10dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>


        <include android:id="@+id/shadow_main_activity"  layout="@layout/toolbar_shadow" />


    </FrameLayout>





    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/header"
        android:layout_marginRight="20dp"
        app:fab_icon="@drawable/ic_local_movies_white_24dp"
        app:fab_colorNormal="@color/colorAccent"
        app:fab_colorPressed="@color/colorAccentDark"

        />

</RelativeLayout>